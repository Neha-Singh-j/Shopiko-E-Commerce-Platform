<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card border-0 shadow-lg" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(to right, #6a11cb 0%, #fc4a1a 100%);">
                    <h2 class="text-center text-white mb-0" style="font-family: 'Arial Rounded MT Bold', sans-serif;">Join Shopiko!</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold">Username</label>
                            <input type="text" class="form-control py-2" name="username" id="username" placeholder="Choose your username" required
                                   style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px;">
                        </div>
                        <div class="mb-3">
                            <label for="mail" class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control py-2" name="email" id="mail" placeholder="Enter your email" required
                                   style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px;">
                        </div>
                        <div class="mb-3">
                            <label for="gender" class="form-label fw-semibold">Gender</label>
                            <input type="text" class="form-control py-2" name="gender" id="gender" placeholder="Your gender" required
                                   style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px;">
                        </div>
                        <div class="mb-4">
                            <p class="fw-semibold mb-2">I want to register as:</p>
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="role" id="buyer" value="buyer" required
                                           style="border: 2px solid #6a11cb;">
                                    <label class="form-check-label" for="buyer">
                                        Buyer
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="role" id="seller" value="seller"
                                           style="border: 2px solid #6a11cb;">
                                    <label class="form-check-label" for="seller">
                                        Seller
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" class="form-control py-2" name="password" id="password" placeholder="Create a password" required
                                   style="border-radius: 8px; border: 1px solid #ddd; padding-left: 15px;">
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-lg text-white fw-bold py-2" 
                                    style="background: linear-gradient(to right, #6a11cb 0%, #fc4a1a 100%); border-radius: 8px; border: none;">
                                Create Account
                            </button>
                        </div>
                        <div class="text-center pt-2">
                            <p class="mb-0" style="color: #666;">Already have an account? 
                                <a href="/login" style="color: #fc4a1a; text-decoration: none; font-weight: 600;">Login now</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/script.js"></script>
<%-include('../partials/footer')%>