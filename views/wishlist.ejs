<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container-fluid mt-4">
  <div class="row flex-nowrap">

    <!-- Sidebar -->
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="pt-3 mt-5">
        <div class="card shadow-sm mb-3">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Info</h5>
          </div>
          <div class="card-body">
            <p><strong>Name:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Gender:</strong> <%= user.gender %></p>
            <p><strong>Role:</strong> <%= user.role %></p>
            <p><strong>Password:</strong> *******</p>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Wishlist</h2>
        <!-- Toggle button for small screens -->
        <button class="btn btn-primary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle sidebar">
          â˜°
        </button>
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% if (user.wishlist.length > 0) { %>
          <% user.wishlist.forEach(product => { %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <img src="<%= product.img %>" class="card-img-top" alt="<%= product.name %>" style="max-height: 200px; object-fit: cover;">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text text-success fw-bold">Rs <%= product.price %></p>
                  <p class="card-text"><%= product.desc %></p>
                  <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">View</a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center py-5">
            <i class="fas fa-heart-broken fa-3x text-muted mb-3"></i>
            <p class="text-muted fw-bold">Your wishlist is empty!</p>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</div>

<%- include('partials/footer') %>
